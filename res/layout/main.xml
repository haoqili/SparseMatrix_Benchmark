<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="SparseMatrix_Benchmark"
    />

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:weightSum="1.0">

    <Button
        android:id="@+id/button_udp_slave"
        android:layout_width="0dip"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="UDP 1. Start Slaves" />

    <Button
        android:id="@+id/button_udp_master"
        android:layout_width="0dip"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="UDP 2. Start Master" />
</LinearLayout>

<View android:background="#87CEEB" 
    android:layout_width = "fill_parent" 
    android:layout_height="2dip" />

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:weightSum="1.0">
    
    <Button
        android:id="@+id/button_tcp_master"
        android:layout_width="0dip"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="TCP 1. Start Master" />

    <Button
        android:id="@+id/button_tcp_slave"
        android:layout_width="0dip"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="TCP 2. Start Slaves" />
    
</LinearLayout>

<ListView android:id="@+id/logList"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:stackFromBottom="true"
    android:transcriptMode="alwaysScroll">
</ListView> 

</LinearLayout>

